{
  "name": "ScrapeWeb",
  "version": "2.1.1",
  "author": "Garrett Spear <youremail@example.com>",
  "description": "Graphical web scraper for blogs, built with Electron and Puppeteer",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder && npm run create-shortcut",
    "create-shortcut": "node scripts/createShortcut.js"
  },
  "build": {
    "appId": "com.scrapeweb.app",
    "productName": "ScrapeWeb",
    "copyright": "© 2025 Garrett Spear",
    "directories": {
      "output": "app"
    },
    "files": [
      "src/**/*",
      "scripts/preload.js",
      "scrapewebicon.ico",
      "scrapeweb.png",
      "xscrapeweb.png"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64","ia32"]
        },
        {
          "target": "zip",
          "arch": ["x64","ia32"]
        }
      ],
      "icon": "scrapewebicon.ico",
      "legalTrademarks": "ScrapeWeb™"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "garrettds11",
        "repo": "ScrapeWeb",
        "private": false
      }
    ]
  },
  "dependencies": {
    "puppeteer": "^22.8.2",
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "electron": "^25.9.8",
    "electron-builder": "^24.13.3",
    "windows-shortcuts": "^0.1.6"
    
  }
}
